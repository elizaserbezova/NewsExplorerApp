@model NewsExplorerApp.ViewModels.NewsViewModel
@{
    ViewData["Title"] = "Latest News";
    var countries = ViewBag.Countries as List<string> ?? new List<string>();
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
}

<h2 class="mb-4">Latest News</h2>

<form asp-action="Index" method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <label for="country" class="form-label">Country</label>
        <select class="form-select" id="country" name="country">
            @foreach (var country in ViewBag.Countries)
            {
                <option value="@country" selected="@(Model.SelectedCountry == country)">
                    @country.ToUpper()
                </option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <label for="category" class="form-label">Category</label>
        <select class="form-select" id="category" name="category">
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category" selected="@(Model.SelectedCategory == category)">
                    @category
                </option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <label for="sources" class="form-label">Sources</label>
        <select class="form-select" id="sources" name="sources">
            <option value="">All</option>
            @foreach (var source in ViewBag.Sources)
            {
                <option value="@source" selected="@(Model.SelectedSources == source)">
                    @source
                </option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <label for="searchQuery" class="form-label">Search by keyword</label>
        <input type="text"
               class="form-control"
               id="searchQuery"
               name="searchQuery"
               value="@Model.SearchQuery"
               placeholder="Enter a keyword or phrase">
    </div>

    <div class="col-md-2 align-self-end">
        <button type="submit"
                class="btn btn-secondary w-100"
                name="sortOrder"
                value="desc">
            Sort by Newest
        </button>
    </div>

    <div class="col-md-2 align-self-end">
        <button type="submit"
                class="btn btn-secondary w-100"
                name="sortOrder"
                value="asc">
            Sort by Oldest
        </button>
    </div>

    <div class="col-md-2 align-self-end">
        <button type="submit"
                class="btn btn-primary w-100">
            Search
        </button>
    </div>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning">
        Please check your filter values.
    </div>
}

@if (Model.Articles.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var article in Model.Articles)
        {
            var isFav = Model.FavoriteUrls != null &&
            Model.FavoriteUrls.Contains(article.Url);

            <div class="col">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(article.UrlToImage))
                    {
                        <img src="@article.UrlToImage"
                             class="card-img-top"
                             alt="Article Image"
                             style="height: 200px; object-fit: cover;">
                    }

                    <div class="card-body">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text">@article.Description</p>
                    </div>

                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            @article.PublishedAt?.ToString("dd MMM yyyy HH:mm")
                        </small>

                        <div class="d-flex gap-2">

                            <a href="@article.Url"
                               class="btn btn-primary btn-sm"
                               target="_blank">
                                Прочети
                            </a>

                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <form asp-controller="Favorites"
                                      asp-action="@(isFav ? "Remove" : "Add")"
                                      method="post"
                                      class="d-inline">

                                    @Html.AntiForgeryToken()

                                    <input type="hidden" name="url" value="@article.Url" />
                                    <input type="hidden" name="title" value="@article.Title" />
                                    <input type="hidden" name="source" value="@article.SourceName" />
                                    <input type="hidden"
                                           name="returnUrl"
                                           value="@Context.Request.Path@Context.Request.QueryString" />

                                    <button type="submit"
                                            class="btn btn-sm @(isFav ? "btn-warning" : "btn-outline-primary")"
                                            title="@(isFav ? "Remove from favorites" : "Add to favorites")">
                                        @(isFav ? "★" : "☆")
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Няма намерени новини за зададените критерии.</p>
}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var sourcesSelect = document.getElementById('sources');
        var countrySelect = document.getElementById('country');
        var categorySelect = document.getElementById('category');

        function toggleFields() {
            if (sourcesSelect.value !== "") {
                countrySelect.disabled = true;
                categorySelect.disabled = true;
            } else {
                countrySelect.disabled = false;
                categorySelect.disabled = false;
            }
        }

        toggleFields();
        sourcesSelect.addEventListener('change', toggleFields);
    });
</script>