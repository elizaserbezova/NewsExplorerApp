@model NewsExplorerApp.ViewModels.NewsViewModel
@{
    ViewData["Title"] = "Latest News";
    var countries = ViewBag.Countries as List<string> ?? new List<string>();
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
}

<h2 class="mb-4">Latest News</h2>

<form asp-action="Index" method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <label for="country" class="form-label">Country</label>
        <select class="form-select" id="country" name="country">
            @foreach (var country in countries)
            {
                if (Model.SelectedCountry == country)
                {
                    <option value="@country" selected>@country.ToUpper()</option>
                }
                else
                {
                    <option value="@country">@country.ToUpper()</option>
                }
            }
        </select>
    </div>

    <div class="col-md-3">
        <label for="category" class="form-label">Category</label>
        <select class="form-select" id="category" name="category">
            @foreach (var category in categories)
            {
                if (Model.SelectedCategory == category)
                {
                    <option value="@category" selected>@category</option>
                }
                else
                {
                    <option value="@category">@category</option>
                }
            }
        </select>
    </div>

    <div class="col-md-2 align-self-end">
        <button type="submit" class="btn btn-primary w-100">Search</button>
    </div>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        <strong>⚠</strong> @ViewBag.Error
    </div>
}
else if (Model.Articles != null && Model.Articles.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var article in Model.Articles)
        {
            <div class="col">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(article.UrlToImage))
                    {
                        <img src="@article.UrlToImage" class="card-img-top" alt="Article Image" style="height: 200px; object-fit: cover;">
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text">@article.Description</p>
                        <p class="text-muted small mt-auto">
                            Published: @article.PublishedAt <br />
                            Source: @article.SourceName
                        </p>
                        <a href="@article.Url" class="btn btn-outline-primary mt-2" target="_blank">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No news articles found.</p>
}